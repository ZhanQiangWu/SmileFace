<view class="mcontainer">
    <view class="item">
        <image src="/res/drawable/logo.png" class="image"/>
    </view>

    <form bindsubmit='formSubmit' bindreset='formReset'>
    
        <view class="item">
          <view class="login-item">
                <view class="login-item-info">用户名</view>
                <view><input bindinput="usernameInput" placeholder='请输入您的账户名' name='accountName'/></view>
          </view>

          <view class="login-item">
                <view class="login-item-info">密码</view>
                <view class="login-pwd">
                    <input style="flex-grow:1" password="true" placeholder='请输入您的密码' name='accountPswd' bindinput="passwordInput"/> 
                </view>
          </view>

          <view class="login-item bottom">
                <button class="login-btn" form-type='submit' bindtap="loginBtnClick">登录</button>
          </view>
        </view>

    </form>
    

    <view class="item bottom-info">
       <view> 没有账户? <text> 注册 </text> </view>

       <view class="wechat-icon">
            <image src="/res/drawable/wechat.png"  />
       </view>
    </view>
</view> 